<body>

    <form action="{{ url_for("debug_groups") }}" method="post">
        <input type="text" name="group_name" placeholder="new group name">
        <input type="submit">
    </form>

    {% if errors %}
    Errors:
    <ul>
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
    </ul>
    {% endif %}

    <h1>Liste des groupes :</h1>
    {% for group in groups %}
        <li>{{ group.id }} : {{ group.name }}</li>
    {% endfor %}
</body>
</html>