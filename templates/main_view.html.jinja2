<!DOCTYPE html>
<html lang="fr">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ url_for("static", filename="css/main_view.css") }}"/>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="../static/js/messages.js"></script>
</head>
<body>

<!-- Modal -->
<div class="modal fade" id="myModal" data-bs-backdrop="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" >Profile</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="{{ url_for("debug_messages") }}" method="post" enctype="multipart/form-data">
        <input type="text" name="user_id" placeholder="user ID">
        <input type="group" name="group_id" placeholder="group ID">
        <input type="text" name="msg" placeholder="Votre message">
        <input type="file" name="file">
        <input type="submit">
    </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="corner-menu">
    <div class="profile-bar">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"></path>
                </svg>
            {{ current_user.name }}
        </button>
    </div>
    <input type="text" id="filter-friends" class="form-control" placeholder="Rechercher un message" aria-label="Search" />
</div>
<div class="group-list">
    <ul>
        {% for group in groups if current_user in group.users %}
            <div class="chat_list" id="{{ group.id }}" data-name="{{ group.name }}">
                <script type="text/javascript">
                    document.getElementById("{{ group.id }}").onclick = function () {
                        location.href = "/{{ group.id }}";
                    };
                </script>
                <div class="chat_people">
                    <div class="new-messages-badge">
                        <span>{{ unread_messages_count(current_user, group) }} message(s) non lus</span>
                    </div>
                    <div class="chat_ib">
                        {% set msg = group.messages | last %}
                        <h5>{{ group.name }}  <span class="chat_date"> {{ msg.date.date()}}</span></h5>
                        <p class="message_notif"> {{ msg.sender.name }} : {{ msg.content }} </p>
                    </div>
                </div>
            </div>
        {% endfor %}
        <script type="text/javascript">
            document.getElementById("{{active_group.id}}").style.backgroundColor="#dddddd";
        </script>
    </ul>
</div>
<div class="top-bar">
    <h1>{{ active_group.name }}</h1>
</div>
<div class="msg-section">

    {% for block in msg_chain(active_group) %}
        <div class="row">
            {% set sender = block[0].sender %}
            {% if sender!=current_user %}
                <!-- msg is from another user -->
                <div class="received-block">
                    <img class="pp" src="{{ url_for('static', filename = 'profile_pics/'+ sender.id|string +".jpg")}}">
                    <div class="wrapper">
                        <h2 class="name">{{ sender.name }}</h2>
                        {% for msg in block %}
                            <div class="received-message">
                                <div class="text">
                                    <p>{{ msg.content }}</p>
                                </div>
                                {% for attachment in msg.attachments %}
                                    <a class="attachment-wrap"
                                       href="{{ url_for('static', filename = '/uploads/'+attachment.filename) }}"
                                       target="_blank">
                                        <img class="attachment"
                                             src="{{ url_for('static', filename = '/uploads/'+ attachment.filename)}}"
                                             alt="{{ attachment.filename }}"
                                        >
                                    </a>
                                {% endfor %}
                                <h3 class="date">{{ msg.date.strftime('%a | %H:%M') }}</h3>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <!-- msg is from current_user -->
                <div class="sent-block">
                    <div class="wrapper">
                        {% for msg in block %}
                            <div class="sent-message">
                                <div class="text">
                                    <p>{{ msg.content }}</p>
                                </div>
                                {% for attachment in msg.attachments %}
                                    <a class="attachment-wrap"
                                       href="{{ url_for('static', filename = '/uploads/'+attachment.filename) }}"
                                       target="_blank">
                                        <img class="attachment"
                                             src="{{ url_for('static', filename = '/uploads/'+ attachment.filename)}}"
                                             alt="{{ attachment.filename }}"
                                        >
                                    </a>
                                {% endfor %}
                                <h3 class="date">{{ msg.date.strftime('%a | %H:%M') }}</h3>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>
<div class="bottom-bar">
    <form action="{{ url_for("messages", group_id=active_group.id) }}" method="post" enctype="multipart/form-data">
        <input type="text" name="msg" placeholder="Votre message">
        <input type="file" name="file[]" multiple>
        <input type="submit">
    </form>
</div>

</body>